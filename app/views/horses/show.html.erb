<h1>GeekTwitter</h1>
<h3>Horse詳細</h3>
<div class="horse">
  <p><%= @horse.name %></p>
  <p><%= @horse.uma_id %></p>
  <p><%= @horse.year %></p>
  <p><%= @horse.image %></p>
  <p><%= @horse.about_uma %></p>
  <p><%= @horse.about_race %></p>
  <p><%= @horse.sex %></p>
  <p><%= @horse.created_at %></p>

  <% if user_signed_in? %>
  <% if current_user.already_liked?(@horse) %>
    <%= link_to horse_like_path(@horse), method: :delete do %>
      <p>いいねを取り消す</p><%= @horse.likes.count %>
    <% end %>
  <% else %>
    <%= link_to horse_likes_path(@horse), method: :post do %>
      <p>いいね</p><%= @horse.likes.count %>
    <% end %>
  <% end %>
<% else %>
  <p>いいねの数 = </p><%= @horse.likes.count %>
<% end %>
<%= link_to "編集する", edit_horse_path(@horse.id) %>
</div>

<h2>いいねしたユーザー</h2>
<% @horse.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@horse, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<% @horse.tags.each do |tag| %>
  <span><%= tag.name %></span>
<% end %>

<%= link_to "一覧に戻る", horses_path %>