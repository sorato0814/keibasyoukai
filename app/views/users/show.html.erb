<div class=mypage-block>  
  <h1>マイページ</h1>
  <p>名前 : <%= @user.name %></p>
  <p>メールアドレス : <%= @user.email %></p>
  <p>プロフィール : <%= @user.profile %></p>

  <% if current_user.id == @user.id %>
    <%= link_to "編集する", edit_user_registration_path %>
  <% end %>



  <h3>ユーザーの投稿一覧</h3>
  <% @user.horses.each do |t| %>
    
    <%= t.name %>
  <% end %>
  

  <!-- 以下はいいね機能を実装している場合-->
  <h3>ユーザーがいいねした投稿一覧</h3>
  <% @user.liked_horses.each do |t| %>
    <%= t.name %>
  <% end %>
  <!-- ここまで-->

  <%= link_to "一覧に戻る", horses_path %>
</div>  